#:import utils kivy.utils
    
<MyLayout>:
    BoxLayout:
        orientation:'vertical'
        size:root.width, root.height
        TextInput:
            id: calc_input
            text:'0'
            halign:"right"
            font_size:dp(45)
            size_hint:(1, .2)
           
    GridLayout:
        cols:4
        rows:5
        size:root.width, dp(600)
        spacing: 10
        canvas.before:
            Color:
                rgba: utils.rgba('#141717')
            Rectangle:
                size: self.size
                pos: self.pos

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"%"
            on_press: root.get_percentage()
            background_normal:''
            background_color: utils.get_color_from_hex('#FA00DF')
            color: utils.get_color_from_hex('#000000')
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"<<"
            on_press:root.remove_last_char()
            background_normal:''
            background_color: utils.get_color_from_hex('#FA00DF')
            color: utils.get_color_from_hex('#000000')
        Button:
            id: clear
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"C"
            on_press: root.clear()
            background_normal: str(utils.get_color_from_hex('#000000'))
            background_color: utils.get_color_from_hex('#FA00DF')
            color: utils.get_color_from_hex('#000000')
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"/"
            on_press: root.add_math_symbol("/")
            background_normal:''
            background_color: utils.get_color_from_hex('#FA00DF')
            color: utils.get_color_from_hex('#000000')

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"7"
            on_press: root.on_button_press(7)
            background_normal:''
            background_color: utils.get_color_from_hex('#DEEB34')
            color:utils.get_color_from_hex('#000000')
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"8"
            on_press: root.on_button_press(8)
            background_normal:''
            background_color: utils.get_color_from_hex('#DEEB34')
            color:utils.get_color_from_hex('#000000')
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"9"
            on_press: root.on_button_press(9)
            background_normal:''
            background_color: utils.get_color_from_hex('#DEEB34')
            color:utils.get_color_from_hex('#000000')
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"*"
            on_press: root.add_math_symbol("*")
            background_normal:''
            background_color: utils.get_color_from_hex('#DEEB34')
            color:utils.get_color_from_hex('#000000')

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"4"
            on_press: root.on_button_press(4)
            background_normal:''
            background_color: utils.get_color_from_hex('#0384FC')
            color:utils.get_color_from_hex('#000000')
        Button:
