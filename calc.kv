<MyLayout>:
    BoxLayout:
        orientation:'vertical'
        size:root.width, root.height
        TextInput:
            id: calc_input
            text:'0'
            halign:"right"
            font_size:dp(65)
            size_hint:(1, .15)
           
    GridLayout:
        cols:4
        rows:5
        size:root.width, dp(600)

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"%"
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"<<"
            on_press:root.remove_last_char()
        Button:
            id: clear
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"C"
            on_press: root.clear()
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"/"
            on_press: root.add_math_symbol("/")

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"7"
            on_press: root.on_button_press(7)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"8"
            on_press: root.on_button_press(8)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"9"
            on_press: root.on_button_press(9)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"X"
            on_press: root.add_math_symbol("*")

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"4"
            on_press: root.on_button_press(4)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"5"
            on_press: root.on_button_press(5)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"6"
            on_press: root.on_button_press(6)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"-"
            on_press: root.add_math_symbol("-")
 
        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"1"
            on_press: root.on_button_press(1)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"2"
            on_press: root.on_button_press(2)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"3"
            on_press: root.on_button_press(3)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"+"
            on_press: root.add_math_symbol("+")

        #Row
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"+/-"
            on_press:root.make_positive_or_negative()
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"0"
            on_press: root.on_button_press(0)
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"."
            on_press: root.add_dot()
        Button:
            size_hint:(.2,.2)
            font_size:dp(32)
            text:"="
            on_press:root.equals()
